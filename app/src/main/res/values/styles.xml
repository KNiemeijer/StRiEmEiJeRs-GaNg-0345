<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launcher theme only used when app is started -->
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar style -->
    <style name="toolbar" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/toolBarColour</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    
    <!-- Navigation Style -->
    <style name="navigation_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/nav_background</item>
    </style>

    <!-- Alert dialog style -->
    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:background">@color/achtergrondkleur</item>
        <item name="android:backgroundTint">@color/achtergrondkleur</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="advies_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/achtergrondkleur</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="finalmessage_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/achtergrondkleur</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:clickable">false</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="opnieuw_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:shadowColor">@color/options_button_shadow</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_animator</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">10dp</item>
    </style>

    <style name="options_button_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:shadowColor">#00000054</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_animator</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">10dp</item>
    </style>

    <style name="div_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="linear_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/achtergrondkleur</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_animator</item>
    </style>

    <style name="constraint_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="scroll_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:background">@color/achterstegrondkleur</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Style for cards in Meer fragment -->
    <style name="meer_card_style" parent="Theme.AppCompat.DayNight">
        <item name="backgroundTint">@color/card_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_animator</item>
    </style>
    
    <!-- Style for text part of card in Meer fragment -->
    <style name="meer_card_text" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/card_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Style for icon on cards in Meer fragment -->
    <style name="meer_card_icon" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@color/card_bg</item>
    </style>

    <!-- Wolm Timer + and - buttons -->
    <style name="timer_time_buton" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_animator</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
